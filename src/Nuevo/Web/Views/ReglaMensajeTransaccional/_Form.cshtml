@model BusinessEntity.ReglaMensajeTransaccional

@{
    var mensajeTransaccionalId = Request.QueryString["mensajeTransaccionalId"];
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ReglaMensajeTransaccional</legend>

        <div class="editor-label">
            @Html.Label("CampoId","Campo Transaccional")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CampoId")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Valor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Valor)
            @Html.ValidationMessageFor(model => model.Valor)
        </div>

        @Html.Hidden("Id", Model != null ? Model.Id : 0)

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar", "Index", new { mensajeTransaccionalId })
</div>
